<h1> Choose phone </h1>
  <%= label_tag  'Brand:' %>
  <%= select_tag :brand, options_for_select(@brands), 
                          { class: 'form-control', 
                            data: {ajax_path: get_models_for_select_path}, 
                            prompt: "Choose brand of phone"} %>


  <%= label_tag  :model, 'Model:', class: 'js-models-label'%>
  <%= select_tag :model, options_for_select(@brand_models), 
                         { class: 'form-control js-models',
                           data: {ajax_path: get_phone_info_path}, 
                           prompt: "Choose model of phone"}%>
<br>

<table class="table table-bordered phone_info">
</table>

<br>

<div class="row">
  <%= form_tag search_phone_path, method: 'get', 
                                  id: "search_phone",
                                  class: 'input-group' do %>
    <%= text_field_tag :search, params[:search], { placeholder: 'Search for...',
                                                   class: "form-control js-search",
                                                   data: {ajax_path: search_phone_path}}%>
    <span class="input-group-btn">
      <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
    </span>
  <% end %>
</div>

<table class="table table-bordered finded_phones">
</table>
